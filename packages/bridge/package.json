{
  "name": "@alien-id/bridge",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "type": "module",
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alien-id/miniapp-sdk.git",
    "directory": "packages/bridge"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir ./dist --target bun --format esm --external @alien-id/contract && bunx tsc --declaration --emitDeclarationOnly --outDir ./dist --skipLibCheck --target ESNext --moduleResolution bundler --module ESNext --esModuleInterop src/index.ts",
    "test": "bun test --preload tests/setup.ts tests",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@alien-id/contract": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
